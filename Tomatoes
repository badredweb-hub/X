<script>
const memes = [
  "Ben kimim, sen kimsin?",
  "Kameran açık olabilir, bakmadık.",
  "IP adresin zaten bizimle.",
  "Sessizlik, en çok ses çıkarandır.",
  "Gizli olan eğlencelidir.",
  "Her şey kayıt altında… belki."
];

const gifs = [
  "https://media.giphy.com/media/xT0xeJpnrWC4XWblEk/giphy.gif",
  "https://media.giphy.com/media/jk9Rmh1tiKOoy/giphy.gif",
  "https://media.giphy.com/media/l0MYC0LajbaPoEADu/giphy.gif",
  "https://media.giphy.com/media/hp3dmEUMqHX2U/giphy.gif"
];

function newMeme() {
  document.getElementById("meme-text").textContent = memes[Math.floor(Math.random()*memes.length)];
  document.getElementById("gif").src = gifs[Math.floor(Math.random()*gifs.length)];
}
